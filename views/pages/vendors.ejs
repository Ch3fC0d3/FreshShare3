<div class="main-container" id="vendors-root" data-return="<%= typeof query !== 'undefined' && query && query.return ? String(query.return) : '' %>">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h1 class="h3 mb-0">Vendors</h1>
      <div>
        <a href="/marketplace" class="btn btn-link">Back to Marketplace</a>
      </div>
    </div>

    <div class="row g-3">
      <div class="col-lg-4">
        <div class="card h-100">
          <div class="card-header d-flex justify-content-between align-items-center">
            <span class="h6 mb-0">My Vendors</span>
            <button id="vendor-new" class="btn btn-sm btn-primary"><i class="fas fa-plus me-1"></i> New</button>
          </div>
          <div class="list-group list-group-flush" id="vendor-list">
            <div class="list-group-item text-muted">Loading…</div>
          </div>
        </div>
      </div>
      <div class="col-lg-8">
        <div class="card">
          <div class="card-header d-flex justify-content-between align-items-center">
            <span class="h6 mb-0" id="vendor-form-title">Create Vendor</span>
            <div>
              <button id="vendor-delete" class="btn btn-sm btn-outline-danger" style="display:none"><i class="fas fa-trash"></i></button>
            </div>
          </div>
          <div class="card-body">
            <form id="vendor-form">
              <input type="hidden" id="vendor-id">
              <div class="row g-3">
                <div class="col-md-8">
                  <label class="form-label">Name*</label>
                  <input type="text" class="form-control" id="vendor-name" required>
                </div>
                <div class="col-md-4">
                  <label class="form-label">Website</label>
                  <input type="url" class="form-control" id="vendor-website" placeholder="https://…">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Contact Email</label>
                  <input type="email" class="form-control" id="vendor-email">
                </div>
                <div class="col-md-6">
                  <label class="form-label">Contact Phone</label>
                  <input type="text" class="form-control" id="vendor-phone" placeholder="(555) 123-4567">
                </div>
                <div class="col-12">
                  <label class="form-label">Address</label>
                  <input type="text" class="form-control" id="vendor-address" placeholder="Street address">
                </div>
                <div class="col-md-6">
                  <label class="form-label">City</label>
                  <input type="text" class="form-control" id="vendor-city">
                </div>
                <div class="col-md-3">
                  <label class="form-label">State</label>
                  <input type="text" class="form-control" id="vendor-state">
                </div>
                <div class="col-md-3">
                  <label class="form-label">Zip</label>
                  <input type="text" class="form-control" id="vendor-zip">
                </div>
                <div class="col-12">
                  <label class="form-label">Notes</label>
                  <textarea class="form-control" id="vendor-notes" rows="2"></textarea>
                </div>
              </div>
              <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary" id="vendor-save">Save</button>
                <button type="button" class="btn btn-outline-secondary" id="vendor-cancel">Cancel</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/js/vendors.js"></script>
