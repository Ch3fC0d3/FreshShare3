<%- contentFor('style') %>
<link rel="stylesheet" href="/css/main.css">
<style>
    .profile-container {
        max-width: 95%;
        margin: 0 auto;
        padding: 30px;
        background: #fff;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0,0,0,0.1);
    }
    
    .profile-image-container {
        width: 150px;
        height: 150px;
        border-radius: 50%;
        overflow: hidden;
        margin: 0 auto 20px;
        border: 3px solid #f0f0f0;
    }
    
    .profile-image-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .section-title {
        font-size: 28px;
        margin-bottom: 30px;
        color: #333;
        text-align: center;
        border-bottom: 2px solid #f0f0f0;
        padding-bottom: 15px;
    }
    
    .section-subtitle {
        font-size: 20px;
        color: #555;
        margin: 25px 0 15px;
        padding-bottom: 10px;
        border-bottom: 1px solid #eee;
    }
    
    .profile-section {
        margin-bottom: 30px;
    }
    
    .profile-info {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }
    
    .info-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }
    
    .info-label {
        font-weight: bold;
        min-width: 120px;
    }
    
    .info-value {
        color: #555;
    }
    
    .edit-profile-btn {
        margin-top: 20px;
        text-align: center;
    }
</style>

<%- contentFor('body') %>
<div class="main-content">
    <div class="container">
        <div class="profile-container">
            <h1 class="section-title">Profile</h1>
            
            <!-- Profile Image -->
            <div class="profile-image-section text-center">
                <div class="profile-image-container">
                    <img id="profileImage" src="<%= user.profileImage || '/assets/images/avatar-placeholder.jpg' %>" alt="Profile Image">
                </div>
                <h3 class="mt-3"><%= user.firstName %> <%= user.lastName %></h3>
                <p class="text-muted">@<%= user.username %></p>
            </div>
            
            <!-- Personal Information -->
            <div class="profile-section">
                <h2 class="section-subtitle">Personal Information</h2>
                <div class="profile-info">
                    <div class="info-item">
                        <span class="info-label">Username:</span>
                        <span class="info-value"><%= user.username %></span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">Email:</span>
                        <span class="info-value"><%= user.email %></span>
                    </div>
                    <% if (user.phoneNumber) { %>
                    <div class="info-item">
                        <span class="info-label">Phone:</span>
                        <span class="info-value"><%= user.phoneNumber %></span>
                    </div>
                    <% } %>
                </div>
            </div>
            
            <!-- Address Information -->
            <% if (user.location && (user.location.city || user.location.state)) { %>
            <div class="profile-section">
                <h2 class="section-subtitle">Location</h2>
                <div class="profile-info">
                    <% if (user.location.street) { %>
                    <div class="info-item">
                        <span class="info-label">Street:</span>
                        <span class="info-value"><%= user.location.street %></span>
                    </div>
                    <% } %>
                    <% if (user.location.city || user.location.state) { %>
                    <div class="info-item">
                        <span class="info-label">City/State:</span>
                        <span class="info-value"><%= user.location.city %>, <%= user.location.state %></span>
                    </div>
                    <% } %>
                    <% if (user.location.zipCode) { %>
                    <div class="info-item">
                        <span class="info-label">Zip Code:</span>
                        <span class="info-value"><%= user.location.zipCode %></span>
                    </div>
                    <% } %>
                </div>
            </div>
            <% } %>
            
            <!-- Edit Profile Button -->
            <div class="edit-profile-btn">
                <a href="/profile-edit" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit Profile
                </a>
            </div>

            <!-- Recent Orders -->
            <% if (typeof recentOrders !== 'undefined' && recentOrders && recentOrders.length) { %>
            <div class="profile-section">
                <h2 class="section-subtitle">Recent Orders</h2>
                <div class="profile-info">
                    <% recentOrders.forEach(function(o){ %>
                    <div class="info-item">
                        <span class="info-label">Order</span>
                        <span class="info-value">
                            <a href="/orders/<%= o._id %>"><%= o._id %></a>
                            <span class="text-muted" style="margin-left:8px"><%= o.createdAt ? new Date(o.createdAt).toLocaleString() : '' %></span>
                            <span class="text-muted" style="margin-left:8px">$<%= (o.total || 0).toFixed(2) %></span>
                        </span>
                    </div>
                    <% }); %>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>

<%- contentFor('script') %>
<script src="/js/profile-page.js"></script>