<style>
/* Forum styles moved to main.css */
</style>
<link rel="stylesheet" href="/css/main.css">

<%- contentFor('body') %>
<section class="forum-section">
    <div class="forum-container">
        <div class="forum-header">
            <h1>Community Forum</h1>
            <button class="new-post-btn" id="new-post-btn">
                <i class="fas fa-plus"></i> New Post
            </button>
        </div>

        <!-- Forum Filters -->
        <div class="forum-filters">
            <div class="filter-container">
                <div class="filter-group">
                    <label class="filter-label">Filter by Category</label>
                    <div class="custom-select-wrapper">
                        <select class="form-select">
                            <option>All Categories</option>
                            <option>Questions</option>
                            <option>Discussion</option>
                            <option>Tips & Tricks</option>
                            <option>Recipes</option>
                            <option>Success Stories</option>
                        </select>
                        <i class="fas fa-chevron-down select-arrow"></i>
                    </div>
                </div>
                <div class="filter-group">
                    <label class="filter-label">Sort by</label>
                    <div class="custom-select-wrapper">
                        <select class="form-select">
                            <option>Most Recent</option>
                            <option>Most Popular</option>
                            <option>Most Commented</option>
                            <option>Trending</option>
                        </select>
                        <i class="fas fa-chevron-down select-arrow"></i>
                    </div>
                </div>
                <div class="filter-group">
                    <label class="filter-label">Search</label>
                    <div class="search-container">
                        <input type="text" class="form-control" placeholder="Search posts...">
                        <i class="fas fa-search"></i>
                    </div>
                </div>
                <div class="filter-actions">
                    <button class="filter-btn">
                        <i class="fas fa-filter"></i> 
                        <span>Apply Filters</span>
                    </button>
                    <button class="filter-reset">
                        <i class="fas fa-times"></i>
                        <span>Reset</span>
                    </button>
                </div>
            </div>
        </div>

        <!-- Forum Posts -->
        <div id="forumPosts" class="forum-posts">
            <div id="forumPostsStatus" class="note">Loading posts...</div>
        </div>
        <div class="text-center" style="margin:12px 0">
            <button id="forumLoadMore" class="filter-btn" style="display:none">
                <i class="fas fa-sync-alt"></i>
                <span>Load More</span>
            </button>
            <div id="forumLoadMoreStatus" class="note"></div>
        </div>
    </div>
</section>

<!-- Create Post Section -->
<section class="create-post-section" style="margin-top: 0; padding-top: 0;">
    <div class="container my-5">
        <div class="create-post-card">
            <div class="create-post-header">
                <h2>Create New Post</h2>
                <p>Share your questions, ideas, or experiences with the community</p>
            </div>
            <form id="forumCreateForm" class="create-post-form">
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Select Category<span class="required">*</span></label>
                        <div class="custom-select-wrapper">
                            <select id="postCategory" class="form-select">
                                <option selected disabled>Choose a category</option>
                                <option>Questions</option>
                                <option>Discussion</option>
                                <option>Tips & Tricks</option>
                                <option>Recipes</option>
                                <option>Success Stories</option>
                            </select>
                            <i class="fas fa-chevron-down select-arrow"></i>
                        </div>
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Post Title<span class="required">*</span></label>
                        <input id="postTitle" type="text" class="form-control" placeholder="Enter a descriptive title">
                    </div>
                </div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Post Content<span class="required">*</span></label>
                        <div class="content-editor">
                            <div class="editor-toolbar">
                                <button type="button" class="toolbar-btn" title="Bold"><i class="fas fa-bold"></i></button>
                                <button type="button" class="toolbar-btn" title="Italic"><i class="fas fa-italic"></i></button>
                                <button type="button" class="toolbar-btn" title="Bulleted List"><i class="fas fa-list-ul"></i></button>
                                <button type="button" class="toolbar-btn" title="Numbered List"><i class="fas fa-list-ol"></i></button>
                                <button type="button" class="toolbar-btn" title="Insert Link"><i class="fas fa-link"></i></button>
                            </div>
                            <textarea id="postContent" class="form-control content-textarea" rows="8" placeholder="Share your thoughts, questions, or ideas..."></textarea>
                        </div>
                    </div>
                </div>
                <div id="forumCreateMsg" class="note" style="margin:8px 0 0 0;"></div>
                
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Add Media (Optional)</label>
                        <div class="media-upload-area">
                            <input type="file" id="postMedia" class="file-input" accept="image/*" multiple>
                            <label for="postMedia" class="upload-area">
                                <div class="upload-icon">
                                    <i class="fas fa-cloud-upload-alt"></i>
                                </div>
                                <div class="upload-text">
                                    <span class="upload-title">Drag and drop images or click to browse</span>
                                    <span class="upload-subtitle">Supports: JPG, PNG, GIF (Max: 5MB)</span>
                                </div>
                            </label>
                            <div class="media-preview" id="mediaPreview"></div>
                        </div>
                    </div>
                </div>
                
                <div class="form-actions">
                    <div class="action-info">
                        <span class="required">*</span> Required fields
                    </div>
                    <div class="action-buttons">
                        <button type="button" class="btn-cancel">Cancel</button>
                        <button type="submit" class="btn-publish">
                            <i class="fas fa-paper-plane"></i> Publish Post
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>



<%- contentFor('script') %>
<script src="/js/forum-page.js"></script>